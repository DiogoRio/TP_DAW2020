extends layout

block content
  .w3-modal(style='display:block;')
    .w3-modal-content.w3-card-4
      header.w3-container.w3-blue.w3-card-4.w3-center
        h3 Edit #{user.name}
      .w3-container.w3-margin.w3-padding.w3-section
      
        form.w3-container(action=`/users/edit/${user._id}` method='POST')
          b
            label Name
          input.w3-input.w3-border(type="text" name="name" value=user.name)
          br
          b
            label Mail
          input.w3-input.w3-border(type="text" name="email" value=user.email)
          br
          b
            label Location
          input.w3-input.w3-border(type="text" name="location" value=user.location)
          br
          b
            label Department
          input.w3-input.w3-border(type="text" name="department" value=user.department)
          br
          b
            label Course
          input.w3-input.w3-border(type="text" name="course" value=user.course)
          br
          button.w3-btn.w3-right.w3-blue(type="submit" value="Submit" style="margin-left:10px; margin-top:10px") CONFIRM
          a.w3-btn.w3-right.w3-blue(onclick="window.location.assign('/myaccount')" style="margin-left:10px; margin-top:10px") CANCEL  
