extends layout

block content
      div.w3-card-4.w3-container.w3-blue(style='margin-bottom: 50px')
        h3.w3-center APP COM NOME BONITO
      div.w3-cell-row
        div.w3-container.w3-cell.w3-mobile
          div.w3-card-4
            header.w3-container.w3-blue
              h3.w3-center RESOURCES
            if resources.length > 0
              div.w3-responsive
                 table.w3-table-all
                   tr 
                     th Title
                     th Type
                     th Register Date
                     th Creation Date
                   each r in resources
                     tr
                      td
                        adress 
                            a(href=`/resources/${r._id}`) #{r.title}
                      td= r.typeR
                      td= r.creDate
                      td= r.regDate
            else
                .w3-container
                  p There are no resources...
        div.w3-container.w3-cell.w3-mobile(style="max-width: 40%")
          div.w3-card-4
            header.w3-container.w3-blue
                h3.w3-center NEWS
            ul.w3-ul(style="width:100%;overflow-y: scroll; max-height: 50vh;")
              each n in news
                li.w3-bar(style="border-style:solid;border-width: 1px;")
                  div.w3-bar-item(style = "margin:0;padding:0")
                    label.w3-large #{n.title}!
                    br
                    label #{n.body}
                  label.w3-bar-item.w3-right(style="font-size:13px;") #{n.date}
          div.w3-card-4.w3-container(style='margin-top: 16px;padding:0px')
            div.w3-container.w3-blue(Style='margin:0px;padding:0px')
              h3.w3-center LOGIN
            div.w3-container(style='padding: 16px')
              form(action='users/login' method='POST')
                label Username:
                input.w3-input(type="text" name="username")
                label Password:
                input.w3-input(type="password" name="password")
                input.w3-btn.w3-blue(type="submit" value="Submit" style="margin-left:10px; margin-top:10px")
                a.w3-btn.w3-blue(href='users/register' style="margin-left:10px; margin-top:10px") Register
