extends layout

block content
    .w3-container.w3-blue
        h3 Login Page:
    form.w3-container(action='login' method='POST')
        label Username:
        input.w3-input(type="text" name="username")
        label Password:
        input.w3-input(type="password" name="password")
        input.w3-btn.w3-blue(type="submit" value="Submit" style="margin-left:10px; margin-top:10px")
        a.w3-btn.w3-blue(href='register' style="margin-left:10px; margin-top:10px") Register
    each val in errors
      p= val