extends layout

block content
    .w3-modal(style='display:block;')
        .w3-modal-content.w3-card-4
          header.w3-container.w3-blue.w3-card-4.w3-center
            h3 LOGIN
          .w3-container.w3-margin.w3-padding.w3-section
            form.w3-container(action='login' method='POST')
                label Username:
                input.w3-input.w3-border(type="text" name="username")
                label Password:
                input.w3-input.w3-border(type="password" name="password")
                input.w3-btn.w3-blue(type="submit" value="SUBMIT" style="margin-left:10px; margin-top:10px")
                a.w3-btn.w3-blue(href='register' style="margin-left:10px; margin-top:10px") REGISTER
                a.w3-btn.w3-blue.w3-right(href='/' style="margin-left:10px; margin-top:10px") CANCEL
            each val in errors
              p= val