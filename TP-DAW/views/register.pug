extends layout

block content
  .w3-container.w3-margin.w3-border
    .w3-container.w3-blue
        h3 Register Page:
    form.w3-container(action='register' method='POST')
        label Name:
        input.w3-input(type="text" name="name")
        label Username:
        input.w3-input(type="text" name="username")
        label Email:
        input.w3-input(type="text" name="email")
        label Password:
        input.w3-input(type="password" name="password")
        input.w3-btn.w3-blue(type="submit" value="Submit")
        p= error
