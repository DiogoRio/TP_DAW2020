extends layout

block content
    .w3-modal(style='display:block;')
        .w3-modal-content.w3-card-4
          header.w3-container.w3-blue.w3-card-4.w3-center
            h3 EDIT PASSWORD
          .w3-container.w3-margin.w3-padding.w3-section
            form.w3-container(action='pass' method='POST')
                label(style="padding-top:10px; font-size: 120%") Current password:
                input.w3-input.w3-border(type="password" name="currPassword")
                label(style="font-size: 120%") New password:
                input.w3-input.w3-border(type="password" name="password")
                label(style="font-size: 120%") Confirm new password:
                input.w3-input.w3-border(type="password" name="confirmPassword")
                a.w3-btn.w3-left.w3-blue(href="/myaccount" style="margin-left:10px; margin-top:10px") CANCEL
                input.w3-btn.w3-blue(type="submit" value="SUBMIT" style="margin-left:10px; margin-top:10px")
                each e in errors 
                    p=e