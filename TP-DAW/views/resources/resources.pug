extends ../layout

block content
    .w3-card-4
      header.w3-container.w3-blue
        h3 Resources:
      if resources.length > 0
           table.w3-table-all
             tr 
               th Title
               th Type
               th Register Date
               th Creation Date
             each r in resources
               tr
                td
                  adress 
                      a(href=`/resources/${r._id}`) #{r.title}
                td= r.typeR
                td= r.regDate
                td= r.creDate   
      else
          .w3-container
            p There are no resources...
