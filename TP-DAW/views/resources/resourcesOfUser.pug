extends ../layout

block content
   div.w3-container.w3-cell.w3-mobile(class= "w3-col s12" style='margin-bottom: 50px; margin-top: 20px;')
      div.w3-card-4
          header.w3-container.w3-blue
              h3.w3-center Resources of #{author}
          div(style="overflow-y: scroll; max-height: 70vh") 
           if res
              table.w3-table-all
                 tr 
                   th Title
                   th Type
                   th Register Date
                   th Creation Date
                   th Author
                   th Points
                 each r in res
                  tr
                    if r.visibility == "Public"
                     td
                       adress 
                         a(href=`/resources/${r._id}`) #{r.title}
                     td= r.typeR
                     td= r.creDate
                     td= r.regDate
                     td= r.author
                     td= r.totalP
           else
               .w3-container
                 p There are no resources for this user...