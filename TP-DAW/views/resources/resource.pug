extends ../layout

block content
    .w3-card-4
      header.w3-container.w3-blue
        h3 Resource:
      if res
           table.w3-table-all
              tr 
                th Title
                th Type
                th Register Date
                th Creation Date
                th Author

              tr
                td= res.title
                td= res.typeR
                td= res.creDate
                td= res.regDate
                td= res.author
      else
          .w3-container
            p There are no resource...
      header.w3-container.w3-blue
        h3 Comments:
      form.w3-container(action=`/resources/${res._id}/addComment` method='POST')
        input.w3-input(type="text" name="description")
        br
        input.w3-btn.w3-blue(type="submit" value="Comment").custombutton(style="margin-left:10px; margin-top:10px")
